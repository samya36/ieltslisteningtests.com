{
  "name": "ielts-listening-website",
  "version": "2.1.0",
  "description": "雅思听力评分解析网站 - IELTS Listening Analysis Website",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "http-server . -p 8080 -c-1",
    "lint": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,md}\"",
    "optimize:audio": "./audio-optimizer.sh",
    "optimize:images": "node scripts/optimize-images.js",
    "test": "node scripts/validate-project.js",
    "clean": "rimraf dist node_modules/.vite logs",
    "deploy": "npm run build && npm run test"
  },
  "devDependencies": {
    "vite": "^5.4.0",
    "@vitejs/plugin-legacy": "^5.4.1",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "http-server": "^14.1.1",
    "rimraf": "^6.0.1",
    "terser": "^5.31.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41",
    "cssnano": "^7.0.4"
  },
  "keywords": [
    "ielts",
    "listening",
    "test",
    "education",
    "english",
    "雅思",
    "听力"
  ],
  "author": "IELTS Listening Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
